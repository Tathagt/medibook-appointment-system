{
  "info": {
    "name": "MediBook API",
    "description": "Complete API collection for MediBook appointment booking system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Doctors",
      "item": [
        {
          "name": "Get All Doctors",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/doctors",
              "host": ["{{baseUrl}}"],
              "path": ["doctors"]
            }
          }
        },
        {
          "name": "Get Doctor by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/doctors/1",
              "host": ["{{baseUrl}}"],
              "path": ["doctors", "1"]
            }
          }
        },
        {
          "name": "Create Doctor (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dr. John Doe\",\n  \"specialization\": \"Cardiologist\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1234567890\",\n  \"experience_years\": 15\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/doctors",
              "host": ["{{baseUrl}}"],
              "path": ["doctors"]
            }
          }
        }
      ]
    },
    {
      "name": "Appointment Slots",
      "item": [
        {
          "name": "Get Available Slots",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/slots?doctor_id=1",
              "host": ["{{baseUrl}}"],
              "path": ["slots"],
              "query": [
                {
                  "key": "doctor_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Single Slot (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctor_id\": 1,\n  \"slot_time\": \"2024-12-15T10:00:00Z\",\n  \"duration_minutes\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/slots",
              "host": ["{{baseUrl}}"],
              "path": ["slots"]
            }
          }
        },
        {
          "name": "Bulk Create Slots (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctor_id\": 1,\n  \"start_date\": \"2024-12-15\",\n  \"end_date\": \"2024-12-20\",\n  \"start_time\": \"09:00\",\n  \"end_time\": \"17:00\",\n  \"duration_minutes\": 30,\n  \"exclude_weekends\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/slots/bulk",
              "host": ["{{baseUrl}}"],
              "path": ["slots", "bulk"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"slot_id\": 1,\n  \"patient_name\": \"Jane Smith\",\n  \"patient_email\": \"jane@example.com\",\n  \"patient_phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"]
            }
          }
        },
        {
          "name": "Get All Bookings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"]
            }
          }
        },
        {
          "name": "Get Booking by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/bookings/1",
              "host": ["{{baseUrl}}"],
              "path": ["bookings", "1"]
            }
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/bookings/1/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["bookings", "1", "cancel"]
            }
          }
        },
        {
          "name": "Expire Pending Bookings",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/bookings/expire-pending",
              "host": ["{{baseUrl}}"],
              "path": ["bookings", "expire-pending"]
            }
          }
        }
      ]
    }
  ]
}
